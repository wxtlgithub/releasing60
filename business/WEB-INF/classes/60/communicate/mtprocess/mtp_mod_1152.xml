<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- MT处理的Bean前缀是mtp -->
	<!-- MT处理模块配置 -->
	<bean id="mtpModule1152" class="com.lxt2.mtprocess.MtProcessModule">
		<property name="id" value="1152"/>
		<property name="name" value="下行处理"/>
		<property name="hub" ref="hubImpl"/>
		<property name="cacheQueue" ref="mtpSubmitQueue1152"/>
		<property name="controlCmdMap">
			<map>
				<!-- 
				<entry key="isBlack" value-ref="blkMobileChkCmd"/>
				<entry key="isBlackMMS" value-ref="blkMobileChkCmdMMS"/>
				 -->
				<entry key="qePerf" value-ref="mtpQueueCmd1152"/>
				<entry key="view" value-ref="mtpViewCmd1152"/>
			</map>
		</property>
		<!-- 指标集合 -->
		<property name="kpiList">
			<list>
				<ref bean="mtpQueueKPI1152"/>
				<ref bean="mtpModuleKPI1152"/>
			</list>
		</property>
	</bean>
	
	<!-- 模块的指标配置 -->
	<!-- 队列的KPI指标(主要应用于性能测试) -->
	<bean id="mtpQueueKPI1152" class="com.lxt2.queuekc.QueueKPI" init-method="init">
		<property name="queue" ref="mtpSubmitQueue1152"/>
	</bean>
	<!-- 模块的KPI指标(主要应用于模块监视) -->
	<bean id="mtpModuleKPI1152" class="com.lxt2.mtprocess.MtProcessModuleKPI">
		<property name="module" ref="mtpModule1152"/>
		<property name="queue" ref="mtpSubmitQueue1152"/>
	</bean>
	
	<!-- 模块的命令配置 -->
	<bean id="mtpQueueCmd1152" class="com.lxt2.queuekc.QueuePerfCmd">
		<property name="kpiQueueList" ref="mtpQueueKPI1152"/>
	</bean>
	<!-- 获取模块的监视信息 -->
	<bean id="mtpViewCmd1152" class="com.lxt2.base.module.ModuleKPICmd">
		<property name="kpi" ref="mtpModuleKPI1152"/>
	</bean>
</beans>
